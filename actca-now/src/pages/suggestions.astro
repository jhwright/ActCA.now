---
// --- IMPORTS ---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout 
  title="Suggestions - Make Your Voice Heard!"
  description="Share your suggestions and ideas"
>
  <main class="container mx-auto px-4 py-8 max-w-2xl">
    <!-- Header -->
    <header class="mb-8 text-center">
      <h1 class="text-4xl font-bold text-black mb-4">Suggestions</h1>
      <p class="text-xl text-slate-700 mb-2">Share Your Ideas</p>
      <p class="text-slate-600">Help us improve ActCA.now</p>
    </header>
    
    <!-- Suggestion Form -->
    <div class="bg-slate-900 rounded-2xl border-2 border-slate-800 p-8 mb-6 shadow-xl">
      <form 
        id="suggestion-form"
        class="space-y-6"
        method="POST"
        action="/.netlify/functions/send-suggestion"
      >
        <!-- Name Field -->
        <div>
          <label 
            for="name" 
            class="block text-base font-bold text-yellow-400 mb-3"
          >
            Name (optional)
          </label>
          <input
            type="text"
            id="name"
            name="name"
            class="w-full px-5 py-4 border-2 border-slate-700 rounded-xl focus:outline-none focus:border-yellow-400 focus:ring-2 focus:ring-yellow-400/50 text-white bg-slate-800 text-lg placeholder-slate-500"
            placeholder="Your name"
          />
        </div>
        
        <!-- Email Field -->
        <div>
          <label 
            for="email" 
            class="block text-base font-bold text-yellow-400 mb-3"
          >
            Email (optional)
          </label>
          <input
            type="email"
            id="email"
            name="email"
            class="w-full px-5 py-4 border-2 border-slate-700 rounded-xl focus:outline-none focus:border-yellow-400 focus:ring-2 focus:ring-yellow-400/50 text-white bg-slate-800 text-lg placeholder-slate-500"
            placeholder="your@email.com"
          />
        </div>
        
        <!-- Message Field -->
        <div>
          <label 
            for="message" 
            class="block text-base font-bold text-yellow-400 mb-3"
          >
            Your Suggestion
          </label>
          <textarea
            id="message"
            name="message"
            rows="10"
            required
            class="w-full px-5 py-4 border-2 border-slate-700 rounded-xl focus:outline-none focus:border-yellow-400 focus:ring-2 focus:ring-yellow-400/50 text-white bg-slate-800 resize-y text-lg placeholder-slate-500 leading-relaxed"
            placeholder="Share your ideas, feedback, or suggestions for ActCA.now..."
          ></textarea>
        </div>
        
        <!-- Submit Button - Styled like the Tap to Call button -->
        <button
          type="submit"
          class="call-cta w-full min-h-[72px] font-extrabold text-2xl rounded-2xl flex items-center justify-center text-center transition-all duration-200 active:scale-[0.98] cursor-pointer px-6 py-4 focus-visible:outline-none"
        >
          <span class="flex items-center gap-3">
            <span aria-hidden="true">üì§</span>
            <span class="uppercase tracking-wide">Send Suggestion</span>
          </span>
        </button>
      </form>
      
      <!-- Success/Error Messages -->
      <div id="form-message" class="mt-4 hidden"></div>
    </div>
    
    <!-- Navigation -->
    <div class="text-center space-y-4">
      <div class="flex gap-4 justify-center">
        <a 
          href="/"
          class="inline-block px-6 py-3 bg-slate-800 text-yellow-400 font-semibold rounded-lg hover:bg-slate-700 transition-colors min-h-[48px] flex items-center justify-center"
        >
          ‚Üê Back to Action Center
        </a>
        <a 
          href="/resources"
          class="inline-block px-6 py-3 bg-slate-800 text-yellow-400 font-semibold rounded-lg hover:bg-slate-700 transition-colors min-h-[48px] flex items-center justify-center"
        >
          üìÑ Resources
        </a>
      </div>
    </div>
  </main>
</BaseLayout>

<script is:inline>
  (() => {
    const form = document.getElementById('suggestion-form');
    const messageDiv = document.getElementById('form-message');
    
    if (!form || !messageDiv) return;
    
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      // Disable submit button
      const submitBtn = form.querySelector('button[type="submit"]');
      const originalText = submitBtn.textContent;
      submitBtn.disabled = true;
      submitBtn.textContent = 'Sending...';
      messageDiv.classList.add('hidden');
      
      try {
        const formData = new FormData(form);
        const data = Object.fromEntries(formData.entries());
        
        const response = await fetch('/.netlify/functions/send-suggestion', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(data),
        });
        
        const result = await response.json();
        
        if (response.ok && result.success) {
          messageDiv.className = 'mt-4 p-4 bg-green-100 border-2 border-green-400 rounded-lg text-green-800 font-semibold';
          messageDiv.textContent = '‚úì Thank you! Your suggestion has been sent.';
          messageDiv.classList.remove('hidden');
          form.reset();
        } else {
          throw new Error(result.error || 'Failed to send suggestion');
        }
      } catch (error) {
        messageDiv.className = 'mt-4 p-4 bg-red-100 border-2 border-red-400 rounded-lg text-red-800 font-semibold';
        messageDiv.textContent = `‚úó Error: ${error.message}. Please try again.`;
        messageDiv.classList.remove('hidden');
      } finally {
        submitBtn.disabled = false;
        submitBtn.textContent = originalText;
      }
    });
  })();
</script>

