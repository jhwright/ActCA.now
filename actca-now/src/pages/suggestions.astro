---
// --- IMPORTS ---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout 
  title="Suggestions - Make Your Voice Heard!"
  description="Share your suggestions and ideas"
>
  <main class="container mx-auto px-4 py-8 max-w-2xl">
    <!-- Header -->
    <header class="mb-8 text-center">
      <h1 class="text-4xl font-bold text-black mb-4">Suggestions</h1>
      <p class="text-xl text-slate-700 mb-2">Share Your Ideas</p>
      <p class="text-slate-600">Help us improve ActCA.now</p>
    </header>
    
    <!-- Suggestion Form -->
    <div class="bg-white rounded-lg border-2 border-slate-300 p-6 mb-6">
      <form 
        id="suggestion-form"
        class="space-y-6"
        method="POST"
        action="/.netlify/functions/send-suggestion"
      >
        <!-- Name Field -->
        <div>
          <label 
            for="name" 
            class="block text-sm font-semibold text-slate-900 mb-2"
          >
            Name (optional)
          </label>
          <input
            type="text"
            id="name"
            name="name"
            class="w-full px-4 py-3 border-2 border-slate-400 rounded-lg focus:outline-none focus:border-yellow-400 focus:ring-2 focus:ring-yellow-400/50 text-slate-900 bg-white"
            placeholder="Your name"
          />
        </div>
        
        <!-- Email Field -->
        <div>
          <label 
            for="email" 
            class="block text-sm font-semibold text-slate-900 mb-2"
          >
            Email (optional)
          </label>
          <input
            type="email"
            id="email"
            name="email"
            class="w-full px-4 py-3 border-2 border-slate-400 rounded-lg focus:outline-none focus:border-yellow-400 focus:ring-2 focus:ring-yellow-400/50 text-slate-900 bg-white"
            placeholder="your@email.com"
          />
        </div>
        
        <!-- Subject Field -->
        <div>
          <label 
            for="subject" 
            class="block text-sm font-semibold text-slate-900 mb-2"
          >
            Subject
          </label>
          <input
            type="text"
            id="subject"
            name="subject"
            required
            class="w-full px-4 py-3 border-2 border-slate-400 rounded-lg focus:outline-none focus:border-yellow-400 focus:ring-2 focus:ring-yellow-400/50 text-slate-900 bg-white"
            placeholder="Brief description of your suggestion"
          />
        </div>
        
        <!-- Message Field -->
        <div>
          <label 
            for="message" 
            class="block text-sm font-semibold text-slate-900 mb-2"
          >
            Your Suggestion
          </label>
          <textarea
            id="message"
            name="message"
            rows="8"
            required
            class="w-full px-4 py-3 border-2 border-slate-400 rounded-lg focus:outline-none focus:border-yellow-400 focus:ring-2 focus:ring-yellow-400/50 text-slate-900 bg-white resize-y"
            placeholder="Share your ideas, feedback, or suggestions..."
          ></textarea>
        </div>
        
        <!-- Submit Button -->
        <button
          type="submit"
          class="w-full min-h-[64px] bg-yellow-400 text-slate-950 font-extrabold text-xl rounded-xl flex items-center justify-center hover:bg-yellow-300 transition-all duration-200 active:scale-[0.98] cursor-pointer border-4 border-yellow-600 shadow-lg"
        >
          üìß Send Suggestion
        </button>
      </form>
      
      <!-- Success/Error Messages -->
      <div id="form-message" class="mt-4 hidden"></div>
    </div>
    
    <!-- Navigation -->
    <div class="text-center space-y-4">
      <div class="flex gap-4 justify-center">
        <a 
          href="/"
          class="inline-block px-6 py-3 bg-slate-800 text-yellow-400 font-semibold rounded-lg hover:bg-slate-700 transition-colors min-h-[48px] flex items-center justify-center"
        >
          ‚Üê Back to Action Center
        </a>
        <a 
          href="/resources"
          class="inline-block px-6 py-3 bg-slate-800 text-yellow-400 font-semibold rounded-lg hover:bg-slate-700 transition-colors min-h-[48px] flex items-center justify-center"
        >
          üìÑ Resources
        </a>
      </div>
    </div>
  </main>
</BaseLayout>

<script is:inline>
  (() => {
    const form = document.getElementById('suggestion-form');
    const messageDiv = document.getElementById('form-message');
    
    if (!form || !messageDiv) return;
    
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      // Disable submit button
      const submitBtn = form.querySelector('button[type="submit"]');
      const originalText = submitBtn.textContent;
      submitBtn.disabled = true;
      submitBtn.textContent = 'Sending...';
      messageDiv.classList.add('hidden');
      
      try {
        const formData = new FormData(form);
        const data = Object.fromEntries(formData.entries());
        
        const response = await fetch('/.netlify/functions/send-suggestion', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(data),
        });
        
        const result = await response.json();
        
        if (response.ok && result.success) {
          messageDiv.className = 'mt-4 p-4 bg-green-100 border-2 border-green-400 rounded-lg text-green-800 font-semibold';
          messageDiv.textContent = '‚úì Thank you! Your suggestion has been sent.';
          messageDiv.classList.remove('hidden');
          form.reset();
        } else {
          throw new Error(result.error || 'Failed to send suggestion');
        }
      } catch (error) {
        messageDiv.className = 'mt-4 p-4 bg-red-100 border-2 border-red-400 rounded-lg text-red-800 font-semibold';
        messageDiv.textContent = `‚úó Error: ${error.message}. Please try again.`;
        messageDiv.classList.remove('hidden');
      } finally {
        submitBtn.disabled = false;
        submitBtn.textContent = originalText;
      }
    });
  })();
</script>

