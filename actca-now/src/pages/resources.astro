---
// --- IMPORTS ---
import BaseLayout from '../layouts/BaseLayout.astro';
import ResourceCard from '../components/ResourceCard.astro';

// --- DATA ---
// Placeholder resources - can be replaced with content collection later
const resources = [
  {
    title: "California Autonomy Framework",
    description: "A comprehensive whitepaper outlining the legal and economic framework for California's soft secession strategy.",
    link: "/resources/autonomy-framework.pdf",
    type: "whitepaper"
  },
  {
    title: "I-580 Corridor Economic Impact Study",
    description: "Detailed analysis of the economic benefits of California-first infrastructure investment in the Richmond corridor.",
    link: "/resources/economic-impact.pdf",
    type: "study"
  },
  {
    title: "Source Receipts: Federal Funding Analysis",
    description: "Documentation of federal funding dependencies and California's path to financial independence.",
    link: "/resources/federal-funding.pdf",
    type: "receipt"
  }
];
---

<BaseLayout 
  title="Resources - Make Your Voice Heard!"
  description="Whitepapers, studies, and source receipts supporting California autonomy"
>
  <main class="container mx-auto px-4 py-8 max-w-4xl">
    <!-- Header -->
    <header class="mb-8 text-center">
      <h1 class="text-4xl font-bold text-yellow-400 mb-4">Resources</h1>
      <p class="text-xl text-slate-300 mb-2">Whitepapers & Source Receipts</p>
      <p class="text-slate-400">Evidence-based documentation for California autonomy</p>
    </header>
    
    <!-- Resource Cards -->
    <div class="space-y-4">
      {resources.map((resource) => (
        <ResourceCard 
          title={resource.title}
          description={resource.description}
          link={resource.link}
          type={resource.type}
        />
      ))}
    </div>
    
    <!-- Navigation -->
    <div class="mt-12 text-center space-y-4">
      <div class="flex gap-4 justify-center">
        <a 
          href="/suggestions"
          class="inline-block px-6 py-3 bg-slate-800 text-yellow-400 font-semibold rounded-lg hover:bg-slate-700 transition-colors min-h-[48px] flex items-center justify-center"
        >
          ðŸ’¡ Suggestions
        </a>
      </div>
    </div>
  </main>
</BaseLayout>

