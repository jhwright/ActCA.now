---
// --- IMPORTS ---
// (No imports needed for this component)

// --- PROPS ---
interface Props {
  title: string;
  description: string;
  link: string;
  type?: string;
}

const { title, description, link, type = 'document' } = Astro.props;
---

<div class="bg-slate-900 rounded-lg p-6 mb-4 border border-slate-800 hover:border-yellow-400 transition-colors">
  <!-- Resource Type Badge -->
  {type && (
    <div class="mb-3">
      <span class="inline-block px-3 py-1 bg-slate-800 text-yellow-400 text-sm font-semibold rounded">
        {type.toUpperCase()}
      </span>
    </div>
  )}
  
  <!-- Title -->
  <h3 class="text-xl font-bold text-yellow-400 mb-3">{title}</h3>
  
  <!-- Description -->
  <p class="text-slate-300 mb-6 leading-relaxed">{description}</p>
  
  <!-- View Resource Button - Thumb-First Design -->
  <a
    href={link}
    target="_blank"
    rel="noopener noreferrer"
    class="block w-full min-h-[60px] bg-yellow-400 text-slate-950 font-bold text-lg rounded-lg flex items-center justify-center hover:bg-yellow-300 transition-colors active:scale-95"
  >
    ðŸ“„ View Resource â†’
  </a>
</div>


